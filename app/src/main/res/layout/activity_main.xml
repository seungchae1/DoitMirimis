<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFEA"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <ImageButton
            android:id="@+id/btn_calendar"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/calender_img"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="30dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="2022년 8월 3일"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:textColor="#000000"
            android:layout_marginBottom="20dp"
            android:text="미리미의 하루"/>
    </FrameLayout>
    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="560dp">
        <LinearLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <FrameLayout
                android:id="@+id/frame1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text1"
                    android:ems="10"
                    android:gravity="top"
                    android:hint="오늘의 할 일은 무엇인가요?"
                    android:textSize="15sp"
                    android:paddingTop="35dp"
                    android:paddingLeft="50dp"
                    android:background="@drawable/rectangle1"
                    android:layout_width="match_parent"
                    android:layout_height="90dp" />
                <CheckBox
                    android:id="@+id/check1"
                    android:layout_width="20dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="20dp"
                    android:paddingLeft="10dp"
                    android:buttonTint="#34F1F8"/>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/frame2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text2"
                    android:ems="10"
                    android:gravity="top"
                    android:hint="오늘의 할 일은 무엇인가요?"
                    android:textSize="15sp"
                    android:paddingTop="35dp"
                    android:paddingLeft="50dp"
                    android:background="@drawable/rectangle1"
                    android:layout_width="match_parent"
                    android:layout_height="90dp" />
                <CheckBox
                    android:id="@+id/check2"
                    android:layout_width="20dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="20dp"
                    android:paddingLeft="10dp"
                    android:buttonTint="#34F1F8"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/frame3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text3"
                    android:ems="10"
                    android:gravity="top"
                    android:hint="오늘의 할 일은 무엇인가요?"
                    android:textSize="15sp"
                    android:paddingTop="35dp"
                    android:paddingLeft="50dp"
                    android:background="@drawable/rectangle1"
                    android:layout_width="match_parent"
                    android:layout_height="90dp" />
                <CheckBox
                    android:id="@+id/check3"
                    android:layout_width="20dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="20dp"
                    android:paddingLeft="10dp"
                    android:buttonTint="#34F1F8"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/frame4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text4"
                    android:ems="10"
                    android:gravity="top"
                    android:hint="오늘의 할 일은 무엇인가요?"
                    android:textSize="15sp"
                    android:paddingTop="35dp"
                    android:paddingLeft="50dp"
                    android:background="@drawable/rectangle1"
                    android:layout_width="match_parent"
                    android:layout_height="90dp" />
                <CheckBox
                    android:id="@+id/check4"
                    android:layout_width="20dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="20dp"
                    android:paddingLeft="10dp"
                    android:buttonTint="#34F1F8"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/frame5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text5"
                    android:ems="10"
                    android:gravity="top"
                    android:hint="오늘의 할 일은 무엇인가요?"
                    android:textSize="15sp"
                    android:paddingTop="35dp"
                    android:paddingLeft="50dp"
                    android:background="@drawable/rectangle1"
                    android:layout_width="match_parent"
                    android:layout_height="90dp" />
                <CheckBox
                    android:id="@+id/check5"
                    android:layout_width="20dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="20dp"
                    android:paddingLeft="10dp"
                    android:buttonTint="#34F1F8"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/frame6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text6"
                    android:ems="10"
                    android:gravity="top"
                    android:hint="오늘의 할 일은 무엇인가요?"
                    android:textSize="15sp"
                    android:paddingTop="35dp"
                    android:paddingLeft="50dp"
                    android:background="@drawable/rectangle1"
                    android:layout_width="match_parent"
                    android:layout_height="90dp" />
                <CheckBox
                    android:id="@+id/check6"
                    android:layout_width="20dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="20dp"
                    android:paddingLeft="10dp"
                    android:buttonTint="#34F1F8"/>
            </FrameLayout>
        </LinearLayout>

    </ScrollView>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/btn_char"
            android:layout_width="70dp"
            android:layout_height="65dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/image3"/>

        <ImageButton
            android:id="@+id/plus"
            android:layout_width="52dp"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="330dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.615"
            android:background="@drawable/group3"/>
    </FrameLayout>
</LinearLayout>